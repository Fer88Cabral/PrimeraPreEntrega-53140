{{> header}}

<div>
    <h1>Implementaci√≥n de Login</h1>

    <h3>Lista de productos:</h3>
    
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>description</th>
                <th>price</th>
                <th>code</th>
                <th>stock</th>
                <th>category</th>
                <th>status</th>
                <th>imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>
                    {{#if this.status}}
                    Activo
                    {{else}}
                    Desactivo
                    {{/if}}
                </td>
                <td>
                    {{#if this.thumbnails.length}}
                    <a href="{{this.thumbnails.[0]}}" target="_blank" >{{this.thumbnails.[0]}}</a>
                    {{else}}
                    Sin Imagen
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>